<?xml version="1.0" ?>
<Controller>	
	<!-- ОПИСАНИЕ ДЕЙСТВИЙ -->
	<!-- Действия игрока -->
	<Actions>
		<MoveLeft> 
			<Move x="-1" y="0"/>
			<Sound name="step" />
		</MoveLeft>
		<MoveRight> 
			<Move x="1" y="0"/>
			<Sound name="step" />
		</MoveRight>
		<MoveUp> 
			<Move x="0" y="-1"/>
			<Sound name="step" />
		</MoveUp>
		<MoveDown> 
			<Move x="0" y="1"/>
			<Sound name="step" />
		</MoveDown>
	</Actions>

	<!-- УРПАВЛЕНИЕ: Привязка клавиш к действиям -->
	<Controls>
		<A action="MoveLeft"/>
		<D action="MoveRight"/>
		<W action="MoveUp"/>
		<S action="MoveDown"/>
	</Controls>
</Controller>